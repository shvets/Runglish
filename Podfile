use_frameworks!

target 'Runglish_iOS' do
  platform :ios, '10.0'

  podspec :path => 'Runglish.podspec'

  target 'Runglish_iOSTests' do
    inherit! :search_paths
  end
end

target 'Runglish_tvOS' do
  platform :tvos, '10.10'

  podspec :path => 'Runglish.podspec'

  target 'Runglish_tvOSTests' do
    inherit! :search_paths
  end
end

target 'Runglish_macOS' do
  platform :osx, '10.10'

  podspec :path => 'Runglish.podspec'

  target 'Runglish_macOSTests' do
    inherit! :search_paths
  end
end
